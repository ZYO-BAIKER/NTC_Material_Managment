<%= render "shared/header" %>
<div class="login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-container") do |f| %>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

      <p><%= f.text_field :account, autofocus: true, placeholder:"アカウント名" %></p>
      <p><%= f.password_field :password, autocomplete: "off", placeholder:"パスワード" %></p>
      <p><%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md" do %><i class="fas fa-sign-in-alt"></i>ログイン<% end %></p>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
